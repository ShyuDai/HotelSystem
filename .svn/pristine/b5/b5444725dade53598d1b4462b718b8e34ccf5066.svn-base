	@Override
	public int ChangeRoomInfoByOldRoomNumber(String sql, String newroomnumber, Integer roomtypeid, String roomtypename,
			Integer roomtypeprice, String oldroomnumber) {
		return executeUpdatewg( sql, newroomnumber, roomtypeid, roomtypename, roomtypeprice, oldroomnumber);
	}

}
